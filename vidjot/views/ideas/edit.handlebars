{{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
{{else}}

{{/each}}
<div class="card card-body">
    <h1 class="text-center">Edit video Ideas</h1>
    <form action="/ideas/{{idea.id}}?_method=PUT" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" value="{{idea.title}}" required>
        </div>
        <div class="form-group">
            <label for="details">Details</label>
           <textarea name="details" id="" class="form-control">{{idea.details}}</textarea>
        </div>
        <button class="btn btn-warning btn-block" type="submit">Submit</button>
    </form>
</div>